# ============================================================================
# LLM API Keys
# ============================================================================

# SambaNova API Configuration (if using SambaNova provider)
# Production API: https://api.sambanova.ai/v1
# Development API: https://api-sambastack-dev-4.sambanova.ai/v1
# Get your key from: https://cloud.sambanova.ai/
SAMBANOVA_API_BASE="https://api.sambanova.ai/v1"
SAMBANOVA_API_KEY="your-sambanova-api-key-here"

# Anthropic API Key (if using Anthropic provider)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_DEV_KEY="sk-ant-api03-your-anthropic-api-key-here"

# Fireworks API Key (optional, if using Fireworks provider)
# Get your key from: https://fireworks.ai/
FIREWORKS_API_KEY="your-fireworks-api-key-here"

# ============================================================================
# Provider Configuration
# ============================================================================

# Provider to use: 'anthropic' or 'sambanova' (default: anthropic)
# You can switch providers at runtime using the UI dropdown or API
PROVIDER="anthropic"

# ============================================================================
# Provider-Specific LLM Configurations
# ============================================================================
# Each provider has its own config with 4 LLM roles:
# - MAIN_AGENT_LLM: Handles conversation, tool selection, and responses
# - VALIDATION_LLM: Validates queries for relevance to Synthea medical records
# - CYPHER_AGENT_LLM: Generates custom Cypher queries for analytics
# - SYNTHESIS_LLM: Synthesizes tool results into final user responses
#
# When you set PROVIDER above, the corresponding config is activated.
# You can also switch providers at runtime via the frontend UI.
# ============================================================================

# Anthropic Configuration (Claude models)
ANTHROPIC_MAIN_AGENT_LLM="claude-sonnet-4-5-20250929"
ANTHROPIC_VALIDATION_LLM="claude-haiku-4-5-20251001"
ANTHROPIC_CYPHER_AGENT_LLM="claude-sonnet-4-5-20250929"
ANTHROPIC_SYNTHESIS_LLM="claude-sonnet-4-5-20250929"

# SambaNova Configuration
# Options: gpt-oss-120b, DeepSeek-V3.1, Llama-4-Maverick-17B-128E-Instruct,
#          Meta-Llama-3.1-8B-Instruct, Meta-Llama-3.3-70B-Instruct
SAMBANOVA_MAIN_AGENT_LLM="gpt-oss-120b"
SAMBANOVA_VALIDATION_LLM="Meta-Llama-3.1-8B-Instruct"
SAMBANOVA_CYPHER_AGENT_LLM="Meta-Llama-3.3-70B-Instruct"
SAMBANOVA_SYNTHESIS_LLM="gpt-oss-120b"

# ============================================================================
# Neo4j Database Configuration
# ============================================================================

NEO4J_URI=neo4j://localhost:7687
NEO4J_USERNAME=your-neo4j-username
NEO4J_PASSWORD=your-neo4j-password

# ============================================================================
# Server Configuration
# ============================================================================

PORT=8000

# ============================================================================
# LangSmith Configuration (for tracing and debugging)
# ============================================================================

# Set LANGSMITH_TRACING=true to enable tracing
# Get your API key from https://smith.langchain.com/
LANGSMITH_TRACING=false
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=lsv2_pt_your-langsmith-api-key-here
LANGSMITH_PROJECT=your-project-name

# ============================================================================
# Agent Configuration
# ============================================================================

# Maximum number of reflection loop iterations before returning an answer (default: 3)
MAX_AGENT_ITERATIONS=3

# ============================================================================
# Debug Logging Configuration (set to 'true' to enable detailed logging)
# ============================================================================

# AGENT_DEBUG_LOGGING: LLM responses from Main Agent and Cypher Agent
# TOOL_DEBUG_LOGGING: Tool executions and results
# DATABASE_DEBUG_LOGGING: Database queries, parameters, and results/errors
# APP_DEBUG_LOGGING: Application flow, routing decisions, and state management
AGENT_DEBUG_LOGGING=false
TOOL_DEBUG_LOGGING=false
DATABASE_DEBUG_LOGGING=false
APP_DEBUG_LOGGING=false
